<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receiveLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/toPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To:"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/editTextPhoneNo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_toRightOf="@+id/toPhone"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/addContact"
        android:layout_toLeftOf="@+id/addContact" />

    <ImageButton
        android:id="@+id/sendSmsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/ic_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="send"/>

    <EditText
        android:id="@+id/editTextSMS"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="8dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendSmsButton"
        android:layout_toStartOf="@+id/sendSmsButton" />

    <ImageButton
        android:id="@+id/addContact"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_account_box_black_24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"/>


</RelativeLayout>